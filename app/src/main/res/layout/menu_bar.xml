<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:src="@mipmap/ic_exchange"
        android:id="@+id/exchangeBtn"
        android:background="#669999"
        android:scaleType="fitCenter"
        android:tooltipText="Currency Exchange"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="8dp"/>

    <ImageButton
        android:src="@mipmap/ic_dashboard"
        android:id="@+id/dashbordBtn"
        android:background="#669999"
        android:scaleType="fitCenter"
        android:tooltipText="Dashborad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"/>

    <ImageButton
        android:src="@mipmap/ic_setting"
        android:id="@+id/setttingBtn"
        android:background="#669999"
        android:scaleType="fitCenter"
        android:tooltipText="App setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"/>
</LinearLayout>